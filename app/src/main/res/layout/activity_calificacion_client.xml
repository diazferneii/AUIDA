<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".Actividades.Conductores.CalificacionClientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EL VIAJE FINALIZO"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="#050505"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

        </TextView>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="782-check-mark-success.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >



        </com.airbnb.lottie.LottieAnimationView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desde"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="#050505"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

        </TextView>

        <TextView
            android:id="@+id/textViewOriginCalification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cr falsa con  avenidaa falsa"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="#050505"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasta"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="#050505"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

        </TextView>

        <TextView
            android:id="@+id/textViewDestinationCalification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cr falsa con  avenidaa falsa"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="#050505"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

        </TextView>

        <RatingBar
            android:id="@+id/ratingbarCalification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

        </RatingBar>
    </LinearLayout>

    <Button
        android:id="@+id/btnCalifaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="CALIFICAR CLIENTE"
        android:textColor="@color/colorWhite"
        android:layout_margin="20dp">

    </Button>



</androidx.coordinatorlayout.widget.CoordinatorLayout>